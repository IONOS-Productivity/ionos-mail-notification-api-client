{
    "name": "ionos-productivity/ionos-mail-notification-api-client",
    "description": "Event Notification Handler",
    "keywords": [
        "openapitools",
        "openapi-generator",
        "openapi",
        "php",
        "sdk",
        "rest",
        "api"
    ],
    "homepage": "https://github.com/ionos-productivity/ionos-mail-notification-api-client/",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Mikhailo Matiyenko-Kupriyanov",
            "email": "kupriyanov@strato.de",
            "homepage": "https://github.com/ionos-productivity/ionos-mail-notification-api-client/"
        }
    ],
    "require": {
        "php": "^8.0 || ^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "friendsofphp/php-cs-fixer": "^3.5"
    },
    "autoload": {
        "psr-4": { "IONOS\\MailNotificationAPI\\Client\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "IONOS\\MailNotificationAPI\\Client\\Test\\" : "test/" }
    },
    "scripts": {
        "post-install-cmd": [
            "@composer bin all install --ansi"
        ],
        "post-update-cmd": [
            "@composer bin all update --ansi"
        ],
        "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "psalm": "psalm --threads=1 --no-cache",
        "test:unit": "phpunit test -c phpunit.xml.dist --colors=always --fail-on-warning --fail-on-risky"
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    }
}
