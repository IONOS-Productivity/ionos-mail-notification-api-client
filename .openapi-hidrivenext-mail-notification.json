  "paths": {
    "/event/{brand}/remote-wipe-finished": {
      "post": {
        "operationId": "processRemoteWipeFinishedEvent",
        "parameters": [
          {
            "in": "path",
            "name": "brand",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "IONOS",
                "STRATO"
              ]
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WipeMessage"
              }
            }
          },
          "required": true
        },
        "responses": {
          "202": {
            "description": "Mail was sucessfully queued for sending"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            },
            "description": "Invalid data provided"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            },
            "description": "Not found"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                }
              }
            },
            "description": "Internal server error"
          }
        },
        "summary": "Nextlcoud user gets informed that a remote wipe for a specific device has finished",
        "tags": [
          "EventAPI"
        ]
      }
    },
